<html>
  <head>
    <meta http-equiv="Content-Type">
    <title>Notifications Opener</title>

    <style type="text/css">
      body {
        font-family: Arial;
        font-weight: 100;
      }
      #screen-head {
        text-align: center;
        font-weight: 100;
        opacity: 0.5;
      }
      #container {
        margin: 10px auto;
        position: relative;
      }
      #phone {
        width: 300px;
        height: 530px;
        border: 10px solid #333;
        border-top-width: 50px;
        border-bottom-width: 50px;
        border-radius: 15px;
        position: relative;
        top: 10px;
        margin-left: auto;
        margin-right: auto;
      }
      #phone-head {
        color: #333;
        border-bottom: 1px solid lightgray;
        min-height: 30px;
        background: #efefef;
        padding: 10px;
        font-size: 13px;
      }
      #text-container {
        color: white;
        background: #0e86fe;
        border-radius: 3px;
        padding: 10px;
        margin: 10px;
        font-size: 13px;
      }
      .text-center {
        text-align: center;
      }
    </style>
  </head>
  <body>
    <div id="container">
      <h1 id="screen-head">SMS Notification</h1>
      <div id="phone">
        <div id="phone-head">
          <span>From: <strong><%= from %></strong></span>
          <br>
          <span>To: <strong><%= to %></strong></span>
        </div>
        <div id="text-container">
          <%= message %>
        </div>
      </div>
      <br>
      <div class="text-center">
        <p><strong>Configuration Hash</strong></p>
        <%= @config %>
      </div>
      <div class="text-center">
        <p><strong>Params Hash</strong></p>
        <%= { 'from'=>@from, 'to'=>@to, 'message'=>@message } %>
      </div>
    </div>

